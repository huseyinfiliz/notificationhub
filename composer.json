{
    "name": "huseyinfiliz/notificationhub",
    "description": "A Flarum extension for sending custom notifications",
    "keywords": [
        "extension",
        "flarum",
        "notification",
        "custom",
        "send"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Huseyin Filiz",
            "homepage": "https://huseyinfiliz.com.tr/sosyal",
            "email": "mysuperuser01@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/huseyinfiliz/notificationhub",
        "forum": "https://discuss.flarum.org/d/32824"
    },
    "autoload": {
        "psr-4": {
            "huseyinfiliz\\notificationhub\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Notification Hub",
            "category": "feature",
            "icon": {
                "name": "fas fa-bell",
                "backgroundColor": "#3498db",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/37013-notification-hub-extension"
        }
    }
}
